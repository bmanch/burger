<div id="container">

	<div id="marquee">
		<h1>Hamburger Lover's Heaven</h1>

		<img id="bigBurger" src="assets/img/hamburger_icon.png" alt="Big Burger">
	</div>

	<div id="uneaten">
		<h2>What needs Eaten'</h2>
		<ol>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}

						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="1">
							<button type="submit">Devour it!</button>
						</form>
					</li>
					<br>
				{{/unless}}
			{{/each}}
		</ol>
	</div>

	<div id="eaten">
		<h2>What's been Eaten</h2>
		<ol>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						{{this.burger_name}}

						<form action="/{{this.id}}?_method=DELETE" method="POST">
							<button type="submit">Get rid of this burger!</button>
						</form>
					</li>
					<br>
				{{/if}}
			{{/each}}
		</ol>
	</div>

	<div id="addABurger">
		<h2>Add a Hamburger</h2>
		<form class="updateForm" action="/" method="POST">
			<label for="burger">What shall we cook up next?</label>
			<br><br>
			<input type="text" id="burger" name="burgerName">
			<input type="hidden" name="devoured" value="0">
			<br><br>
			<button type="submit">Cook it!</button>
		</form>
	</div>
</div>